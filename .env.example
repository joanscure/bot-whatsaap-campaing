# Puerto del servidor (opcional, default: 3008)
PORT=3008

# Clave secreta para acceder al bot (default: clave123)
BOT_SECRET_KEY=tu_clave_secreta

# Configuración de Email para Nodemailer
# Para Gmail, usa una "App Password" (no tu contraseña normal)
# Genera una en: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_correo@gmail.com
EMAIL_PASS=tu_app_password
